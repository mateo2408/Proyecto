@model Proyecto.Models.Grade

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4 mb-4">Eliminar Nota Académica</h1>

<h3 class="mb-4">¿Estás seguro de que deseas eliminar esto?</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Detalles de la Nota</h5>
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estudiante)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estudiante)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Materia)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Materia)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Calificacion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Calificacion)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaEvaluacion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaEvaluacion)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex gap-2">
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>