@model Proyecto.Models.Grade

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 mb-4">Editar Nota Acad√©mica</h1>

<h4 class="mb-4">Detalles de la Nota</h4>
<hr />
<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ID" />

            <div class="mb-3">
                <label asp-for="Estudiante" class="form-label"></label>
                <input asp-for="Estudiante" class="form-control" />
                <span asp-validation-for="Estudiante" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Materia" class="form-label"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Calificacion" class="form-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaEvaluacion" class="form-label"></label>
                <input asp-for="FechaEvaluacion" class="form-control" />
                <span asp-validation-for="FechaEvaluacion" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>